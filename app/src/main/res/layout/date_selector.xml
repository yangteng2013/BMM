<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




    <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView

        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:paddingLeft="28dp"
        android:paddingTop="3dp"
        android:layout_marginTop="4dip"
        android:background="@color/grey"
        android:textColor="#343434"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Select a Date range" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content">

        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:text="From Date (dd/mm/yyyy)"
            android:textColor="#343434"
            android:textSize="12sp" />


        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:layout_width="240dp"
            android:editable="false"
            android:cursorVisible="false"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:inputType="date"
            android:gravity="center"

            android:ems="10"
            android:id="@+id/startDate" />

        <ImageView
            android:layout_width="30dp"
            android:layout_marginTop="135dp"
            android:layout_toRightOf="@+id/startDate"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/calendarblack"
            android:id="@+id/imageView12" />

    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:id="@+id/txdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="190dip"
            android:text="To Date (dd/mm/yyyy)"
            android:textColor="#343434"
            android:textSize="12sp" />

        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:layout_width="240dp"
            android:editable="false"
            android:cursorVisible="false"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="210dp"
            android:inputType="date"

            android:gravity="center"
            android:ems="10"
            android:id="@+id/endDate" />

        <ImageView
            android:layout_width="30dp"
            android:layout_marginTop="205dp"
            android:layout_toRightOf="@+id/endDate"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/calendarblack"
            android:id="@+id/imageView18" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/otp_footer_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <app.banking.bankmuscat.merchant.components.widgets.RobotoButton
            android:id="@+id/mob_buttonconfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_change_selector"
            android:text="@string/confirm_button_text"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:typeface="roboto_condensed_bold" />

    </LinearLayout>

</RelativeLayout>