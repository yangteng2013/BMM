    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_above="@+id/otp_footer_rel_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <app.banking.bankmuscat.merchant.components.widgets.RobotoEditText
                    android:id="@+id/mobtext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint=""
                    android:textSize="16sp"
                    android:inputType="number"
                    android:paddingLeft="0dp"
                    android:text="@string/enter_mobile"
                    android:textColor="@color/AppthemeTextColor"
                    app:typeface="roboto_condensed_regular" />

            <LinearLayout
                android:id="@+id/mob_page_bg"
                android:layout_width="wrap_content"
                android:weightSum="1"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/mob_page_scroll_rel_layout"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">


                <app.banking.bankmuscat.merchant.components.widgets.RobotoEditText
                    android:id="@+id/mobedtMobilecode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bottomborder"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:hint=""
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:text="+968"
                    android:textColor="@color/AppthemeTextColor"
                    app:typeface="roboto_condensed_regular" />



                <app.banking.bankmuscat.merchant.components.widgets.RobotoEditText
                    android:id="@+id/mobedtMobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:cursorVisible="true"
                    android:layout_toRightOf="@+id/mobedtMobilecode"
                    android:layout_toEndOf="@+id/mobedtMobilecode"
                    android:background="@drawable/bottomborder"
                    android:ems="8"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="8"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/AppthemeTextColor"
                    app:typeface="roboto_condensed_regular" />




            </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:padding="5dp">
            <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
                android:id="@+id/mobtext2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="@string/enter_pin"
                android:textColor="@color/AppthemeTextColor" />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/mob_page_bg1"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:layout_below="@+id/txtpinheader"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:gravity="center">




                <app.banking.bankmuscat.merchant.components.widgets.RobotoEditText
                    android:id="@+id/edtpin1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bottomborder"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:text="" />

                <app.banking.bankmuscat.merchant.components.widgets.RobotoEditText
                    android:id="@+id/edtpin2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/edtpin1"
                    android:background="@drawable/bottomborder"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:text="" />

                <app.banking.bankmuscat.merchant.components.widgets.RobotoEditText
                    android:id="@+id/edtpin3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/edtpin2"
                    android:background="@drawable/bottomborder"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:text="" />

                <app.banking.bankmuscat.merchant.components.widgets.RobotoEditText
                    android:id="@+id/edtpin4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/edtpin3"
                    android:background="@drawable/bottomborder"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:text="" />

               <!-- <app.banking.bankmuscat.merchant.components.widgets.RobotoEditText
                    android:id="@+id/edtpin5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/edtpin4"
                    android:background="@drawable/bottomborder"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1"

                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:text="" />-->



            </LinearLayout>

            <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
                android:text="@string/show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showpin"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/mob_page_bg1" />

        </RelativeLayout>

