<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDffffff"

    >


    <LinearLayout
        android:id="@+id/otp_footer_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal">


        <app.banking.bankmuscat.merchant.components.widgets.RobotoButton
            android:id="@+id/mob_buttonskip"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:layout_weight="1"
            android:background="@drawable/button_change_selector"
            android:text="Skip"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:typeface="roboto_condensed_bold" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/lytbd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"

        android:orientation="vertical">

        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:id="@+id/txthead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/thankyou" />


        <ImageView
            android:id="@+id/imgok"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txthead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ok" />

        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:id="@+id/mobtxtbd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgok"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/loadmoney" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/mobtxtbd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitEnd"
            android:src="@drawable/addtowallet" />


    </RelativeLayout>

</RelativeLayout>