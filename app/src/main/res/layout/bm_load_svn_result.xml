<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_vertical">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"

        android:gravity="center"
        android:inputType="number"
        android:padding="10dp"
        android:text="@string/loadwalletcomplete"
        android:textColor="@color/AppthemeTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:typeface="roboto_condensed_regular" />

    <RelativeLayout
        android:id="@+id/makefav_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"

       >


        <ImageView
            android:id="@+id/makefavimg"
            android:layout_width="match_parent"
            android:layout_height="20dp"
          android:layout_centerHorizontal="true"



            android:layout_marginTop="5dp"
            android:src="@drawable/stardefault" />

        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:id="@+id/makefav_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/makefavimg"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"

            android:cursorVisible="false"
            android:editable="false"
            android:gravity="center"
            android:inputType="number"
            android:paddingLeft="0dp"
            android:text="@string/makefav"
            android:textColor="@color/AppthemeTextColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:typeface="roboto_condensed_regular" />


    </RelativeLayout>

    <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/makefav_layout"
        android:layout_margin="5dp"


        android:gravity="center"
        android:padding="5dp"
        android:text="@string/amount"
        android:textColor="@color/AppthemeTextColor"
        android:textSize="20sp"
        app:typeface="roboto_condensed_regular" />


    <RelativeLayout
        android:id="@+id/total_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">


        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:id="@+id/total_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:editable="false"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="0dp"
            android:paddingBottom="0dp"
            android:text="@string/ro"
            android:textColor="@color/AppthemeTextColor"
            android:textSize="34sp"
            app:typeface="roboto_condensed_regular" />


        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:id="@+id/txt_total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:clickable="false"
            android:cursorVisible="false"
            android:editable="false"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:inputType="number"
            android:paddingLeft="0dp"
            android:text="0.00"
            android:textColor="@color/AppthemeTextColor"
            android:textSize="34sp"

            android:textStyle="bold"
            app:typeface="roboto_condensed_regular"


            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/total_title" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/transactionid_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/total_layout"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"

        android:orientation="horizontal">


        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:id="@+id/transactionid_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:cursorVisible="false"
            android:editable="false"
            android:gravity="left|center_vertical"
            android:inputType="number"
            android:paddingLeft="0dp"
            android:text="@string/transactionid"
            android:textColor="@color/AppthemeTextColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:typeface="roboto_condensed_regular" />


        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:id="@+id/transactionid_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/transactionid_title"
            android:cursorVisible="false"
            android:editable="false"
            android:gravity="center_vertical|center"
            android:inputType="number"
            android:paddingLeft="0dp"
            android:text="XXXXXX"
            android:textColor="@color/AppthemeTextColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:typeface="roboto_condensed_regular" />


    </RelativeLayout>

    <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
        android:id="@+id/txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/transactionid_layout"
        android:cursorVisible="false"
        android:editable="false"
        android:gravity="center_vertical|center"
        android:inputType="number"
        android:paddingLeft="0dp"
        android:text="Date"
        android:textColor="@color/AppthemeTextColor"

        android:textSize="14sp"
        app:typeface="roboto_condensed_regular" />


    <RelativeLayout
        android:id="@+id/savecard_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_date"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"

        android:gravity="center_horizontal"
        android:background="@drawable/button_change_selector"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/saveokimg"
            android:layout_width="20dp"
            android:layout_height="20dp"
           android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/savecard_title"
            android:src="@drawable/addicon" />

        <app.banking.bankmuscat.merchant.components.widgets.RobotoTextView
            android:id="@+id/savecard_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:cursorVisible="false"
            android:editable="false"
            android:gravity="left|center_vertical"
            android:inputType="number"
            android:paddingLeft="0dp"
            android:text="@string/savecard"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"

            app:typeface="roboto_condensed_regular"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/savecard_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ok" />

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/otp_footer_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:orientation="horizontal">



        <app.banking.bankmuscat.merchant.components.widgets.RobotoButton
            android:id="@+id/mob_buttonok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.1dp"
            android:layout_weight="1"
            android:background="@drawable/button_change_selector"
            android:text="@string/ok_button_text"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:typeface="roboto_condensed_bold" />

    </LinearLayout>

</RelativeLayout>